@model CursachPrototype.ViewModels.RegisterVm
@{
    ViewBag.Title = "Регистрация";
}

<div class="container">
    <h2 class="text-center">Регистрация пользователя</h2>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, htmlAttributes: new {@id = "mainForm"}))
    {
        @Html.AntiForgeryToken()
        <div>
            <hr/>
            <div class="alert text-center" style="color: red;">
                <h3>@Html.ValidationSummary()</h3>
            </div>

            <div class="form-group text-center col-md-6 col-md-offset-3">
                @Html.LabelFor(model => model.NickName, "Электронный адресc:")
                @Html.TextBoxFor(model => model.Email, new {@class = "form-control text-center"})
            </div>

            <div class="form-group text-center col-md-6 col-md-offset-3">
                @Html.LabelFor(model => model.NickName, "Ваш ник. Используется как суфикс к имени ваших баз данных и логин для подключения к базе данных:")
                @Html.TextBoxFor(model => model.NickName, new {@class = "form-control text-center"})
            </div>

            <div class="form-group text-center col-md-6 col-md-offset-3">
                @Html.LabelFor(model => model.Password, "Пароль:")
                @Html.PasswordFor(model => model.Password, new {@class = "form-control text-center"})
            </div>

            <div class="form-group text-center col-md-6 col-md-offset-3">
                @Html.LabelFor(model => model.Password, "Подтвердить пароль:")
                @Html.PasswordFor(model => model.PasswordConfirm, new {@class = "form-control text-center"})
            </div>
        </div>
    }
</div>
<button type="submit" class="btn btn-success center-block" form="mainForm">Зарегистрировать</button>
    
