@model CursachPrototype.ViewModels.LoginVm

@{
    ViewBag.Title = "Вход";
}

<div class="container">
    <h2 class="text-center">Вход на сайт</h2>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, htmlAttributes: new { @id = "mainForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="alert text-center" style="color: red;">
            <h3>@Html.ValidationSummary()</h3>
        </div>
        <div>
            <div class="form-group text-center col-md-6 col-md-offset-3">
                @Html.LabelFor(vm => vm.Email)
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control text-center" })
            </div>
            <div class="form-group text-center col-md-6 col-md-offset-3">
                @Html.LabelFor(vm => vm.Password)
                @Html.PasswordFor(model => model.Password, new { @class = "form-control text-center" })
            </div>
        </div>
    }
</div>
<button type="submit" class="btn btn-success  center-block" form="mainForm">Войти</button>