@model CursachPrototype.ViewModels.ServerSelectionVM

@{
    ViewBag.Title = "Servers";
}

<h2>Выберите необходимую СУБД</h2>

@using (Html.BeginForm("CreateDb","CsDispatcher",FormMethod.Post))
{
    @Html.LabelFor(m => m.DataBaseName, "Введите название базы данных")<br/>
    @Html.TextBoxFor(m => m.DataBaseName)<br/>
    foreach (string server in Model.AvailableServers)
    {
        @Html.RadioButtonFor(m => m.SelectedServer,server)
        @Html.LabelFor(m=>m.SelectedServer,server)
    }

    <div>
        <input type="submit" />
    </div>
}