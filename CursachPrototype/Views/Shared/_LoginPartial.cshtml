@using Microsoft.AspNet.Identity
@Html.ActionLink("Главная", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "item left" })
@if (Request.IsAuthenticated)
{
    <div class="horizontal-container">
        @Html.ActionLink("Привет " + User.Identity.GetUserName() + "!", "Index", "UserRoom", routeValues: null, htmlAttributes: new { @class = "item right" })
        @Html.ActionLink("Выход", "Logout", "Account", routeValues: null, htmlAttributes: new { @class = "item right" })
    </div>
}
else
{
    <div class="horizontal-container">
        @Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new {@class = "item right"})
        @Html.ActionLink("Вход", "Login", "Account", routeValues: null, htmlAttributes: new {@class = "item right"})
    </div>
}